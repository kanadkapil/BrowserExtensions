{
    "manifest_version": 2,
    "name": "Screenshot Extension",
    "description": "Capture a screenshot of the current page.",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "downloads"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "favicon.ico",
            "48": "favicon.ico",
            "128": "favicon.ico"
        }
    },
    "icons": {
        "16": "favicon.ico",
        "48": "favicon.ico",
        "128": "favicon.ico"
    }
}